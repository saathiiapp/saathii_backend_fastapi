# Use nginx to serve the static HTML documentation
FROM nginx:alpine

# Copy the HTML documentation file
COPY api_documentation.html /usr/share/nginx/html/index.html

# Copy a custom nginx configuration for better serving
COPY nginx-docs.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
